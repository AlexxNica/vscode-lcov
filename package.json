{
  "name": "vscode-lcov",
  "displayName": "VSCode LCOV",
  "description": "Renders line and branch coverage",
  "version": "0.2.1-betaStatus",
  "publisher": "alexdima",
  "engines": {
    "vscode": "^1.4.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "icon": "icon.png",
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Test Coverage",
      "order": 2,
      "properties": {
        "lcov.path": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ],
          "default": "coverage/lcov.info",
          "description": "Path to lcov file"
        },
        "lcov.branchCoverage": {
          "type": "string",
          "enum": [
            "full",
            "simple",
            "off"
          ],
          "default": "simple",
          "description": "Render Branch Coverage"
        },
        "lcov.sourceMaps": {
          "type": "boolean",
          "default": false,
          "description": "Use JavaScript source maps."
        },
        "lcov.watch": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string"
              },
              "command": {
                "type": "string"
              },
              "osx": {
                "properties": {
                  "pattern": {
                    "type": "string"
                  },
                  "command": {
                    "type": "string"
                  }
                }
              },
              "windows": {
                "properties": {
                  "pattern": {
                    "type": "string"
                  },
                  "command": {
                    "type": "string"
                  }
                }
              },
              "linux": {
                "properties": {
                  "pattern": {
                    "type": "string"
                  },
                  "command": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "default": []
        }
      }
    },
    "commands": [
      {
        "command": "lcov.menu",
        "title": "LCOV Menu"
      },
      {
        "command": "lcov.displayCoverageEditorDecorator",
        "title": "LCOV Toggle coverage editor decorator"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "mocha": "^2.3.3",
    "typescript": "^2.0.3",
    "vsce": "^1.29.0",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "elegant-spinner": "^1.0.1",
    "lcov-parse": "1.0.0",
    "source-map": "0.5.6"
  }
}
