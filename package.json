{
  "name": "vscode-lcov",
  "displayName": "VSCode LCOV",
  "description": "Renders line and branch coverage",
  "version": "0.1.1",
  "publisher": "alexdima",
  "engines": {
    "vscode": "^1.4.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "icon": "icon.png",
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Test Coverage",
      "order": 2,
      "properties": {
        "lcov.path": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ],
          "default": "coverage/lcov.info",
          "description": "Path to lcov file"
        },
        "lcov.branchCoverage": {
          "type": "string",
          "enum": [
            "full",
            "simple",
            "off"
          ],
          "default": "simple",
          "description": "Render Branch Coverage"
        },
        "lcov.sourceMaps": {
          "type": "boolean",
          "default": false,
          "description": "Use JavaScript source maps."
        },
        "lcov.watch": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string"
              },
              "command": {
                "type": "string"
              },
              "osx": {
                "properties": {
                  "pattern": {
                    "type": "string"
                  },
                  "command": {
                    "type": "string"
                  }
                }
              },
              "windows": {
                "properties": {
                  "pattern": {
                    "type": "string"
                  },
                  "command": {
                    "type": "string"
                  }
                }
              },
              "linux": {
                "properties": {
                  "pattern": {
                    "type": "string"
                  },
                  "command": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "default": []
        }
      }
    },
    "commands": [
      {
        "command": "lcov.menu",
        "title": "LCOV Menu"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+t",
        "command": "lcov.menu",
        "mac": "cmd+t"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
    "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "typescript": "^1.8.5",
    "vsce": "^1.8.1",
    "vscode": "^0.11.0"
  },
  "dependencies": {
    "lcov-parse": "0.0.10",
    "source-map": "^0.5.6"
  }
}
