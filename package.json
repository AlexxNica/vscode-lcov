{
  "name": "vscode-lcov",
  "displayName": "vscode-lcov",
  "description": "Renders test coverage",
  "version": "0.0.1",
  "publisher": "alexdima",
  "engines": {
    "vscode": "^1.4.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Test Coverage",
      "order": 2,
      "properties": {
        "lcov.path": {
          "oneOf": [{
            "type": "string"
          }, {
            "type": "array",
            "items": {
              "type": "string"
            }
          }],
          "default": "coverage/lcov.info",
          "description": "Path to lcov file"
        },
        "lcov.watcherExec.osx": {
          "type": "string",
          "default": null,
          "description": "Execute when a source file is watcher. e.g. scripts\test --run ${file.replace(/src/,'/out/') + path.extname(file)}. Bound variables: workspaceRoot, file, path (node's path)"
        },
        "lcov.watcherExec.windows": {
          "type": "string",
          "default": null,
          "description": "Execute when a source file is watcher. e.g. scripts\test --run ${file.replace(/src/,'/out/') + path.extname(file)}. Bound variables: workspaceRoot, file, path (node's path)"
        },
        "lcov.watcherExec.linux": {
          "type": "string",
          "default": null,
          "description": "Execute when a source file is watcher. e.g. scripts\test --run ${file.replace(/src/,'/out/') + path.extname(file)}. Bound variables: workspaceRoot, file, path (node's path)"
        }
      }
    },
    "commands": [{
      "command": "lcov.menu",
      "title": "LCOV Menu"
    }],
    "keybindings": [{
      "key": "ctrl+t", "command": "lcov.menu"
    }]
  },
  "scripts": {
    "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
    "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "typescript": "^1.8.5",
    "vscode": "^0.11.0"
  },
  "dependencies": {
    "lcov-parse": "0.0.10"
  }
}
